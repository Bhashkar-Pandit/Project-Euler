Question Link : https://www.hackerrank.com/contests/projecteuler/challenges/euler018

#include<bits/stdc++.h>
using namespace std;
#define int long long
#define fore(i,n) for(int i=0;i<n;i++)
#define pb push_back

signed main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    int t;
    cin >> t;
    while(t--)
    {
        int n, val;
        cin >> n;
        vector< vector<int> > dp(n);
        for (int i = 0 ; i < n; i++)
        {
            for (int j = 0; j <= i; j++)
            {
                cin >> val;
                dp[i].pb(val);
            }
        }
        for (int i = n - 2 ; i >= 0; i--)
        {
            for (int j = 0; j <= i; j++)
            {
                dp[i][j] += max(dp[i + 1][j], dp[i + 1][j + 1]);    
            }
        }
        cout << dp[0][0] << endl;    
    }
    return 0;
 }
